# =============================================================================
# MODERN SOLANA DEX - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and configure according to your environment
# Use "npm run setup-env" for interactive configuration

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# =============================================================================
# Network: devnet, testnet, mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC Endpoint - Use a reliable RPC provider for production
NEXT_PUBLIC_RPC_ENDPOINT=https://api.devnet.solana.com

# Transaction confirmation level: processed, confirmed, finalized
NEXT_PUBLIC_SOLANA_COMMITMENT=confirmed

# Your deployed DEX program ID (generate after deploying Anchor program)
NEXT_PUBLIC_DEX_PROGRAM_ID=A2NKHo8dGdRmNgFfaxmqLmmDVJyeoxhYRyuC7WouMW47

# =============================================================================
# SUPABASE DATABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_public_key_here

# Service role key (server-side only, keep secure!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# JUPITER API CONFIGURATION
# =============================================================================
# Jupiter API base URL (usually no need to change)
NEXT_PUBLIC_JUPITER_API_URL=https://quote-api.jup.ag/v6

# Optional: Jupiter API key for higher rate limits
JUPITER_API_KEY=your_jupiter_api_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Use mock data instead of real services (useful for development)
NEXT_PUBLIC_USE_MOCK_DATA=true

# Enable/disable specific features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_LIMIT_ORDERS=true
NEXT_PUBLIC_ENABLE_DCA=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Show debug information in the UI
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# Logging level: debug, info, warn, error
NEXT_PUBLIC_LOG_LEVEL=debug

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and configure these for production deployment:

# Production environment
# NODE_ENV=production

# Mainnet configuration
# NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
# NEXT_PUBLIC_RPC_ENDPOINT=https://your-mainnet-rpc-provider.com

# Disable mock data for production
# NEXT_PUBLIC_USE_MOCK_DATA=false

# Production logging
# NEXT_PUBLIC_SHOW_DEBUG_INFO=false
# NEXT_PUBLIC_LOG_LEVEL=error

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Analytics & Monitoring
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io
# VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Additional RPC endpoints for fallback
# NEXT_PUBLIC_RPC_ENDPOINT_BACKUP=https://backup-rpc-provider.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Domain for CORS and security headers
# NEXT_PUBLIC_APP_URL=https://your-domain.com

# API rate limiting
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# QUICK SETUP EXAMPLES
# =============================================================================

# Example 1: Development with mock data (no external services needed)
# NODE_ENV=development
# NEXT_PUBLIC_USE_MOCK_DATA=true
# NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Example 2: Staging with real services on devnet
# NODE_ENV=development
# NEXT_PUBLIC_USE_MOCK_DATA=false
# NEXT_PUBLIC_SOLANA_NETWORK=devnet
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# Example 3: Production with mainnet
# NODE_ENV=production
# NEXT_PUBLIC_USE_MOCK_DATA=false
# NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
# NEXT_PUBLIC_RPC_ENDPOINT=https://your-mainnet-rpc.com
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_service_key
# JUPITER_API_KEY=your_jupiter_key

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Use strong, unique keys for production
# 3. Regularly rotate API keys and database credentials
# 4. Monitor your RPC endpoint usage and costs
# 5. Test configuration with "npm run setup-env"
# 6. See docs/PRODUCTION_SETUP.md for detailed setup guide